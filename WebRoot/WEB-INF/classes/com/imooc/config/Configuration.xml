	<plugins>
		<plugin interceptor="com.imooc.interceptor.PageInterceptor" />
	</plugins>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC">
				<property name="" value="" />
			</transactionManager>
			<dataSource type="UNPOOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql://localhost:3306/MyBatisLearning?useUnicode=true&amp;characterEncoding=UTF-8" />
				<property name="username" value="root" />
				<property name="password" value="root" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="com/imooc/config/sqlxml/Message.xml" />
		<mapper resource="com/imooc/config/sqlxml/Command.xml" />
		<mapper resource="com/imooc/config/sqlxml/CommandContent.xml" />
	</mappers>

</configuration>